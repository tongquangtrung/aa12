<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="12dp" android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên loại đồ dùng"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMoTa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mô tả..." />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">

        <ImageButton
            android:id="@+id/btnEditLoai"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:background="@null"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/btnDeleteLoai"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:src="@drawable/ic_delete" />
    </LinearLayout>
</LinearLayout>
