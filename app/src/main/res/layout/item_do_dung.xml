<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="12dp" android:background="#FFFFFF">
    <ImageView android:id="@+id/imgDoDung" android:layout_width="80dp" android:layout_height="80dp" android:scaleType="centerCrop" android:src="@drawable/ic_launcher_foreground"/>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:paddingLeft="8dp">
        <TextView android:id="@+id/tvTenDoDung" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tên đồ dùng" android:textSize="16sp" android:textStyle="bold"/>
        <TextView android:id="@+id/tvGiaDoDung" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Giá: 0" android:layout_marginTop="4dp"/>
        <TextView android:id="@+id/tvLoaiDoDung" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Loại: ..." android:layout_marginTop="4dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">
        <ImageButton android:id="@+id/btnEditDoDung" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_edit" android:background="@null"/>
        <ImageButton android:id="@+id/btnDeleteDoDung" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_delete" android:background="@null" android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
